@page
@model CineMania.Pages.Movies.ContactModel

@{
    ViewData["Title"] = "Contact us";
    #region Concerns
        //Layout = "~/Pages/Shared/_ContactLayout.cshtml";
    #endregion
}

    <div class="container mt-3">
        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-8">
            <div class="well well-sm">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="Message.Name" class="control-label">Name:</label>
                                <input asp-for="Message.Name" class="form-control" placeholder="Enter Your name"/>
                                <span asp-validation-for="Message.Name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Message.Email" class="control-label">
                                    Email Address:
                                </label>
                                <div class="input-group">
                                    <span class="input-group-addon"><span class="glyphicon glyphicon-envelope"></span>
                                    </span>
                                    <input class="form-control" asp-for="Message.Email" placeholder="Enter Your Email"/>
                                    <span asp-validation-for="Message.Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Message.Subject" class="control-label">
                                    Subject:
                                </label>
                                <input class="form-control" asp-for="Message.Subject" placeholder="Enter Subject">
                                <span asp-validation-for="Message.Subject" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Message.Body" class="control-label"> 
                                    Message:</label>
                                <textarea asp-for="Message.Body" class="form-control" rows="8" cols="25"
                                    placeholder="Type your message here..."></textarea><br>
                                <span asp-validation-for="Message.Body" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <button type="submit" value="Create" class="btn btn-primary pull-right">
                                Send Message
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
            <div class="col-md-2"></div>
        </div>
    </div>